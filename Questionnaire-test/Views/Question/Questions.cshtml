                        <tr>
                            <td><p>@loop . @question.Description</p></td>
                        </tr>
                        <tr>
                            <td>Answer:<input id="IdGenerator" name="IdGenerator" type="text" /></td>
                            <td>&nbsp;&nbsp;</td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                        </tr>

                    }

                    loop++;
                }

            </tbody>
        </table>
    </div>
</div>
