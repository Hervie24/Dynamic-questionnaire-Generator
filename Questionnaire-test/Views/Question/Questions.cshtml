                </div>*@

                        <tr>
                            <td><p>@loop . @question.Description</p></td>
                        </tr>
                        <tr>
                            <td><input id="IdGenerator" name="IdGenerator" type="radio" value="@question.Options.A" />&nbsp;&nbsp;@question.Options.A</td>
                            <td><input id="IdGenerator" name="IdGenerator" type="radio" value="@question.Options.B" />&nbsp;&nbsp;@question.Options.B</td>
                        </tr>
                        <tr>
                            <td><input id="IdGenerator" name="IdGenerator" type="radio" value="@question.Options.C" />&nbsp;&nbsp;@question.Options.C</td>
                            <td><input id="IdGenerator" name="IdGenerator" type="radio" value="@question.Options.D" />&nbsp;&nbsp;@question.Options.D</td>
                        </tr>
                        <tr>
                            <td>&nbsp;</td>
                            <td>&nbsp;</td>
                        </tr>

                    }

                    if (question.QuestionType == 2)
                    {
                        <tr>
                            <td><p>@loop . @question.Description</p></td>
                        </tr>
                        <tr>
                            <td><input id="IdGenerator" name="IdGenerator" type="checkbox" value="@question.Options.A" />&nbsp;&nbsp;@question.Options.A</td>
                            <td><input id="IdGenerator" name="IdGenerator" type="checkbox" value="@question.Options.B" />&nbsp;&nbsp;@question.Options.B</td>
                        </tr>
                        <tr>
                            <td><input id="IdGenerator" name="IdGenerator" type="checkbox" value="@question.Options.C" />&nbsp;&nbsp;@question.Options.C</td>
